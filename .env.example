# Copy this file to `.env` and fill values. Do NOT commit `.env`.
# Example variables used by the Shopify Node + Express template
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SCOPES=read_products,write_products
# HOST should match the forwarded tunnel url (CLI will often manage this)
HOST=https://your-local-tunnel-url
# Example DB / Mongo (if you use one)
DATABASE_URL=mongodb://username:password@host:port/dbname

# Other optional settings
PORT=8081
SESSION_SECRET=change_this_to_a_secure_value
NODE_ENV=development
